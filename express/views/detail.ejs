<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>

      <% if (!contact) { %>
      <div class="alert alert-primary mt-3" role="alert">
        Data contact tidak ada!
        <a href="/contact" class="alert-link">kembali ke daftar contact</a>.
      </div>
      <% }else { %>

      <div class="card mt-3" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= contact.nohp %>
          </h6>
          <p class="card-text"><%= contact.email %></p>
          <a
            href="/contact/delete/<%= contact.nama %>"
            class="btn btn-danger btn-sm"
            onclick="return confirm('yakin hapus data?')"
            >hapus</a
          >
          <a
            href="/contact/edit/<%= contact.nama %>"
            class="btn btn-info text-white btn-sm"
            >edit</a
          >
          <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali</a>
        </div>
      </div>

      <% } %>
    </div>
  </div>
</div>

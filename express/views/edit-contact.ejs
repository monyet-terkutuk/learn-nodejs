<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Edit Data Contact</h2>

      <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
      <div class="alert alert-warning" role="alert"><%= error.msg %></div>
      <% }) %> <% } %>

      <div class="card mt-4">
        <div class="card-body">
          <form method="post" action="/contact/update">
            <input
              type="hidden"
              name="oldNama"
              value="<%= contact.oldNama || contact.nama  %>"
            />

            <div class="mb-3">
              <label for="nama" class="form-label">Nama</label>
              <input
                type="text"
                class="form-control"
                id="nama"
                name="nama"
                placeholder="your name"
                required
                value="<%= contact.nama %>"
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">No Handphone</label>
              <input
                type="email"
                class="form-control"
                name="email"
                id="email"
                placeholder="your@email"
                required
                value="<%= contact.email %>"
              />
            </div>
            <div class="mb-3">
              <label for="nohp" class="form-label">No Handphone</label>
              <input
                type="number"
                class="form-control"
                name="nohp"
                id="nohp"
                placeholder="+62 875645 xxxxx"
                required
                value="<%= contact.nohp %>"
              />
            </div>
            <button type="submit" class="btn btn-info text-white">
              Save Data
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
